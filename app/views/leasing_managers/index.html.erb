<%- model_class = LeasingManager -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:project_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @leasing_managers.each do |leasing_manager| %>
      <tr>
        <td><%= link_to leasing_manager.id, leasing_manager_path(leasing_manager) %></td>
        <td><%= leasing_manager.name %></td>
        <td><%= leasing_manager.email %></td>
        <td><%= leasing_manager.phone %></td>
        <td><%= leasing_manager.project_id %></td>
        <td><%=l leasing_manager.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      leasing_manager_path(leasing_manager), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_leasing_manager_path(leasing_manager), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      leasing_manager_path(leasing_manager),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_leasing_manager_path,
            :class => 'btn btn-primary' %>
