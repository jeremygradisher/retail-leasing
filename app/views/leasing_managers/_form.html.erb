<%= form_for @leasing_manager, :html => { :class => "form-horizontal leasing_manager" } do |f| %>

  <% if @leasing_manager.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@leasing_manager.errors.count, "error") %> prohibited this leasing_manager from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @leasing_manager.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <%= f.label :phone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%#= f.text_field :phone, :class => 'form-control' %>
      <%= f.text_field :phone, :class => 'form-control', :onkeydown => 'javascript:backspacerDOWN(this,event);', :onkeyup => 'javascript:backspacerUP(this,event);' %>
    </div>
    <%=f.error_span(:phone) %>
  </div>
  
  <!--
  <div class="form-group">
    <%#= f.label :project_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%#= f.text_field :project_id, :class => 'form-control' %>
    </div>
    <%#=f.error_span(:project_id) %>
  </div>
  -->
  
  <div class="form-group"> 
   <%= f.label :project_id, 'Project', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%#= f.select :leasing_manager, @project.leasing_managers.all.map{ |v| [v.name, v.id] }, {include_blank: true}, :class => 'form-control' %>
      <%= f.select :project_id, @projects.all.map{ |v| [v.name, v.id] }, {include_blank: true}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:project_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                leasing_managers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
