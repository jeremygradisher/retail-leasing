<%= form_for @dealimage, :html => { :class => "form-horizontal dealimage" } do |f| %>

  <% if @dealimage.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@dealimage.errors.count, "error") %> prohibited this dealimage from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @dealimage.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :deal_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :deal_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:deal_id) %>
  </div>
  <div class="form-group">
    <%= f.label :dealimage, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :dealimage, :class => 'form-control' %>
    </div>
    <%=f.error_span(:dealimage) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dealimages_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
