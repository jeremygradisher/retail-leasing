<div class="col-xs-6">

    <div class="page-header /*print-none*/">
      <button data-toggle="collapse" data-target="#areas-collapse" 
      class='btn btn-primary responsive-none print-none' 
      style='float:right;margin-left:10px;margin-top:12px;'><i class="fa fa-chevron-down"></i></button>
      
      <% if current_user.is_admin? || current_user.role == 'Admin' || current_user.role == 'Editor' %>
          <%= link_to '+ Add space', new_area_path(:map_id => @map), :class => 'btn btn-primary responsive-none print-none responsive-none print-none', :style => 'float:right;margin-top:12px;' %>
      <% end %>
      
      <h1>Tenant Areas</h1>
    </div>
    
    <div id="areas-collapse" class="collapse">    
        <table class="table table-striped add-responsive /*print-none*/" style="/*display:none;*/">
          <thead>
            <tr>
              <!--<th>Area Image:</th>-->
              <th style="min-width:80px;">Suite #:</th>
              <th style="min-width:80px;">Area SF:</th>
    
              <th class="print-none"><%=t '.actions', :default => t("helpers.actions") %></th>
            </tr>
          </thead>
          <tbody>
            <% @areas.each do |area| %>
              <tr>
                <td><%= area.suite_number %></td>
                <td><%= number_with_delimiter(area.area_sqft, :delimiter => ',') %></td>
        
                <td style="min-width:180px;" class="print-none">
                  <%= link_to 'View',
                              area_path(area), :class => 'btn btn-default btn-xs add-responsive-bottom print-none' %>
                  <% if current_user.is_admin? || current_user.role == 'Admin' || current_user.role == 'Editor' %>
                  <%= link_to 'Edit',
                              edit_area_path(area), :class => 'btn btn-primary btn-xs responsive-none print-none' %>
                  <%= link_to 'Destroy',
                              area_path(area),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-xs btn-danger responsive-none print-none' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>