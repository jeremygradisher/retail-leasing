
    <div id="deals-collapse" class="collapse">    
        <table class="table table-striped add-responsive /*print-none*/" style="/*display:none;*/">
          <thead>
            <tr>
              <!--<th>Area Image:</th>-->
              <th style="min-width:80px;">Deal Name:</th>
              <th style="min-width:80px;">Gross Area:</th>
              <th style="min-width:80px;">Lease Status:</th>
              <th style="min-width:80px;">Merch Status:</th>
              <th style="min-width:80px;">Areas:</th>
              <th style="min-width:80px;">Suite #:</th>
              <th style="min-width:80px;">TC Status:</th>
              <th class="print-none"><%=t '.actions', :default => t("helpers.actions") %></th>
            </tr>
          </thead>
          <tbody>
            <% @deals.each do |deal| %>
              <tr>
                <td style="text-align:left;"><%= deal.deal_name %></td>
                <td style="text-align:left;"><%= number_with_delimiter(deal.gross_area, :delimiter => ',') %></td>
                <td style="text-align:left;"><%= deal.lease_status %></td>
                <td style="text-align:left;"><%= deal.merchandising_status %></td>
                <td style="text-align:left;"><%= deal.areas.count %></td>
                <td style="text-align:left;"><% if deal.areas.count > 0 %><%= deal.areas.first.suite_number %><% else %>*No Space<% end %></td>
                <td style="text-align:left;"><% if deal.areas.count > 0 %><%= deal.areas.first.status %><% else %>*No Space<% end %></td>

                <td style="text-align:left;" class="print-none">
                  <%= link_to 'View',
                              deal_path(deal), :class => 'btn btn-default btn-xs add-responsive-bottom print-none',
                          :style => 'width:60px;margin-bottom:2px;' %>
                <br>
                  <% if current_user.is_admin? || current_user.role == 'Admin' || current_user.role == 'Editor' %>
                  <%= link_to 'Edit',
                              edit_deal_path(deal), :class => 'btn btn-primary btn-xs responsive-none print-none',
                          :style => 'width:60px;margin-bottom:2px;' %>
                  <%#= link_to 'Destroy',
                              deal_path(deal),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-xs btn-danger responsive-none print-none' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
