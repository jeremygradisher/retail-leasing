<div class="col-xs-4">

    <div class="page-header /*print-none*/">
      <button data-toggle="collapse" data-target="#areas-deals-collapse" 
      class='btn btn-primary responsive-none print-none' 
      style='float:right;margin-left:10px;'><i class="fa fa-chevron-down"></i></button>
      
      <% if current_user.is_admin? || current_user.role == 'Admin' || current_user.role == 'Editor' %>
          <%= link_to '+ Area/Deal', new_areas_deal_path, :class => 'btn btn-primary responsive-none print-none responsive-none print-none', :style => 'float:right;' %>
      <% end %>
      
      <h3>Areas/Deals</h3>
    </div>
    
    <div id="areas-deals-collapse" class="collapse">    
        <table class="table table-striped add-responsive /*print-none*/" style="/*display:none;*/">
          <thead>
            <tr>
              <!--<th>Area Image:</th>-->
              <th>ID:</th>
              <th>Area:</th>
              <th>Deal:</th>
    
              <th class="print-none"><%=t '.actions', :default => t("helpers.actions") %></th>
            </tr>
          </thead>
          <tbody>
            <% @areas_deals.each do |area_deal| %>
              <tr>
                <td><%= link_to area_deal.id, areas_deal_path(area_deal) %></td>
                <td><%= area_deal.area_id %></td>
                <td><%= area_deal.deal_id %></td>

                <td style="min-width:180px;" class="print-none">
                  <%= link_to 'View',
                              areas_deal_path(area_deal), :class => 'btn btn-default btn-xs add-responsive-bottom print-none' %>
                  <% if current_user.is_admin? || current_user.role == 'Admin' || current_user.role == 'Editor' %>
                  <%= link_to 'Edit',
                              edit_areas_deal_path(area_deal), :class => 'btn btn-primary btn-xs responsive-none print-none' %>
                  <%= link_to 'Destroy',
                              areas_deal_path(area_deal),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-xs btn-danger responsive-none print-none' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>