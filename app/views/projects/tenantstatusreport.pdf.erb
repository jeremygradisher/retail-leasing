<!-- styles for formatted table -->
<style>
  table {
    font-size: 0.75em;
  }
  table thead tr th {
    padding: 10px 2px !important;
    background-color: #FFFFFF;
    color: black;
  }
  
  table thead th.general-info, table thead th.comments {
    color: black;
    background-color: #f8f8f8;
  }
  table thead th.leasing-info {
    color: white;
    background-color: #FF0000;
  }
  table thead th.ll-construction {
    color: white;
    background-color: #dddd4e;
  }
  table thead th.tenant-design {
    color: white;
    background-color: #24b9ae;
  }
  table thead th.permit {
    color: white;
    background-color: #2296ae;
  }
  table thead th.signage {
    color: white;
    background-color: #19375c;
  }
  table thead th.tenant-fit-out {
    color: white;
    background-color: #c9e1f7;
  }
  table thead th.comments {
    color: black;
    background-color: #ffffff;
  }

  .table>tbody>tr>td, .table>tbody>tr>th {
    padding: 5px !important;
  }
  
    at_lease {color:#15958A !important;}
  
    td.yes-backer {background-color: #8BC53F;color:#fff;}
    td.challenged-backer {background-color: #E5BA21;color:#fff;}
    td.no-backer {background-color: #D13E27;color:#fff;}
  
</style>
<!-- end styles for formatted table -->




<div class="alwaysbreak">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th colspan="3" class="text-center general-info"> General Information</th>
        <th colspan="5" class="text-center leasing-info"> Leasing Information</th>
        <th colspan="2" class="text-center ll-construction"> Landlord Construction</th>
        <th colspan="3" class="text-center tenant-design"> Tenant Design</th>
        <th colspan="4" class="text-center tenant-design"> Tenant Design (Plans)</th>
        <th colspan="2" class="text-center permit"> Permit</th>
        <th colspan="3" class="text-center signage"> Signage</th>
        <th colspan="9" class="text-center tenant-fit-out"> Tenant Fit-out</th>
        <th class="text-center comments comments"> Comments</th>
      </tr>
      <tr>
        <th class="text-center">Suite #</th>
        <th width="5%" class="text-center">Area Name</th>
        <th class="text-center">SF</th>
        <th class="text-center">Lease Status</th>
        <th class="text-center">Lease Execution</th>
        <th class="text-center">Turn Over Condition</th>
        <th class="text-center">Fit-Out Duration</th>
        <th class="text-center">Date of Possession</th>
        <th class="text-center">LL Work Sent</th>
        <th class="text-center">Tenant Approval of LL Work</th>
        <th class="text-center">Welcome Package</th>
        <th class="text-center">Base Building Cds</th>
        <th class="text-center">Kick Off Call</th>
        <th class="text-center">CAD Release Form</th>
        <th class="text-center">Final Plans Received</th>
        <th class="text-center">Final Plans Reviewed</th>
        <th class="text-center">Final Plans Status</th>
        <th class="text-center">Permit Submitted</th>
        <th class="text-center">Permit Received</th>
        <th class="text-center">Signage Received</th>
        <th class="text-center">Signage Reviewed</th>
        <th class="text-center">Signage Status</th>
        <th class="text-center">Check in</th>
        <th class="text-center">Premises Acceptance</th>
        <th class="text-center">Construction Start</th>
        <th class="text-center">Lay-out & Rough-in</th>
        <th class="text-center">Fit-out & Finishes</th>
        <th class="text-center">Fixtures</th>
        <th class="text-center">Final Inspections</th>
        <th class="text-center">Merchandising</th>
        <th class="text-center">Open for Business</th>
        <th class="text-center">Comments</th>
      </tr>
    </thead>
    <tbody>
      <% @areasxlsx.each do |object| %>
        <tr class="nobreak" style="page-break-inside: avoid;">
          <td><%= object[:suite_number] %></td>
          <td width="100px !important;"><%= object[:name] %></td>
          <td class="text-center"><%= number_with_delimiter(object[:area_sqft], :delimiter => ',') %></td>
          <td class="<%= object[:lease_status].parameterize.underscore %> text-center"><%= object[:lease_status] %></td>
          <td class="text-center"><%= object[:lease_execution] %></td>
          <td class="text-center"><%= object[:turn_over_condition] %></td>
          <td class="text-center"><%= object[:fit_out_duration] %></td>
          <td class="text-center"><%= object[:date_of_possession] %></td>
          <td class="text-center"><%= object[:landlord_work_sent] %></td>
          <td class="text-center"><%= object[:tenant_approval] %></td>
          <td class="text-center"><%= object[:welcome_package] %></td>
          <td class="text-center"><%= object[:base_building_cds] %></td>
          <td class="text-center"><%= object[:kick_off_call] %></td>
          <td class="text-center"><%= object[:cad_release_form] %></td>
          <td class="text-center"><%= object[:final_plans_received] %></td>
          <td class="text-center"><%= object[:final_plans_reviewed] %></td>
          <td class="text-center"><%= object[:final_plans_status] %></td>
          <td class="text-center"><%= object[:permit_submitted] %></td>
          <td class="text-center"><%= object[:permit_received] %></td>
          <td class="text-center"><%= object[:signage_received] %></td>
          <td class="text-center"><%= object[:signage_reviewed] %></td>
          <td class="text-center"><%= object[:signage_status] %></td>
          <td class="text-center"><%= object[:check_in] %></td>
          <td class="text-center"><%= object[:premises_acceptance] %></td>
          <td class="text-center"><%= object[:construction_start] %></td>
          <td class="text-center"><%= object[:lay_out_rough_in] %></td>
          <td class="text-center"><%= object[:fit_out_finishes] %></td>
          <td class="text-center"><%= object[:fixtures] %></td>
          <td class="text-center"><%= object[:final_inspections] %></td>
          <td class="text-center"><%= object[:merchandising] %></td>
          <td class="text-center"><%= object[:open_for_business] %></td>
          <td class="text-left"><%= object[:area_comments] %></td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
