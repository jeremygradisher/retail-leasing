<% if (current_user && current_user.is_admin?) || (current_user && (current_user.project_ids.include? @areas_deal.project_id)) %>
<%- model_class = AreasDeal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:area_id) %>:</strong></dt>
  <dd><%= @areas_deal.area_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deal_id) %>:</strong></dt>
  <dd><%= @areas_deal.deal_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_id) %>:</strong></dt>
  <dd><%= @areas_deal.project_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              project_path(@project), :class => 'btn btn-default'  %>
<% if (current_user && current_user.is_admin?) || (current_user && current_user.role == 'Admin' && (current_user.project_ids.include? @areas_deal.project_id)) || (current_user && current_user.role == 'Editor' && (current_user.project_ids.include? @areas_deal.project_id)) %>

<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_areas_deal_path(@areas_deal), :class => 'btn btn-primary' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              areas_deal_path(@areas_deal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>              
              
<% else %>
 <h2>You are not authorized to be here. <a href="/" class="btn btn-default">Return Home</a></h2>
<% end %>
