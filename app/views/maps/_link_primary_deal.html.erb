<%= form_for @primary_deal, :html => { :class => "form-horizontal areas_deal" } do |f| %>
<%= f.number_field :area_id, value: area.id, :class => 'form-control', :style => 'display:none;' %>

<%= f.select :deal_id, (area.deals).map{ |d| [d.deal_name, d.id] }, 
{include_blank: false}, 
:class => 'form-control select-css', 
:style => 'float:left;height:40px;width:100%;' %><br>

<%= f.number_field :project_id, value: @project.id, :class => 'form-control', :style => 'display:none;' %>
<%= f.submit "+ Primary Deal", :class => 'btn btn-primary', :style => 'float:left;height:40px;width:100%;margin-top:4px;margin-bottom:10px;' %>
<% end %>