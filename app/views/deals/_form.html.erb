<%= form_for @deal, :html => { :class => "form-horizontal deal formatFunctions" } do |f| %>

  <% if @deal.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@deal.errors.count, "error") %> prohibited this deal from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @deal.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :deal_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :deal_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:deal_name) %>

    <%= f.label :gross_area, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :gross_area, :class => 'form-control required sf-background' %>
    </div>
    <%=f.error_span(:gross_area) %>

    <%= f.label :net_rentable_area, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :net_rentable_area, :class => 'form-control required sf-background' %>
    </div>
    <%=f.error_span(:net_rentable_area) %>
  </div>

  <div class="form-group">
    <%= f.label :project_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <% if controller.action_name == "new" %>
        <%= f.number_field :project_id, value: params[:project_id], :class => 'form-control' %>
      <% else %>
        <%= f.number_field :project_id, :class => 'form-control' %>
      <% end %>
    </div>
    <%=f.error_span(:project_id) %>

    <%= f.label :map_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <% if controller.action_name == "new" %>
      <%= f.number_field :map_id, value: params[:map_id], :class => 'form-control' %>
      <% else %>
      <%= f.number_field :map_id, :class => 'form-control' %>
      <% end %>
    </div>
    <%=f.error_span(:map_id) %>
  </div>
  
  <div class="form-group">
    <%= f.label :lease_status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.select :lease_status, ['Available', 'Prospect', 'LOI', 'At Lease', 'Leased'], {include_blank:false}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lease_status) %>
    
    <% if @dealimages.exists? %>
    <%= f.label :deal_Icon, :class => 'control-label col-lg-2'  %>
      <div class="col-lg-4">
        <% @dealimages.each do |p| %>
              <div style="margin-left:auto;margin-right:auto;text-align:center;">
                <%= image_tag p.dealimage_url, :style => 'max-width:90%;max-height:60px;padding:1%;' %>
              </div><br>
              
              
              <div style="margin-left:auto;margin-right:auto;text-align:center;">
              <%= link_to '<i class="fa fa-edit"></i>'.html_safe,
                    edit_dealimage_path(p), :class => 'btn btn-primary', 
                    :title => 'Edit Attachment'  %>
              <%#= link_to "Destroy Attachment", destroy_associate_attachment_path(p) %>
              <%= link_to '<i class="fa fa-remove"></i>'.html_safe,
                    dealimage_path(p),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger', :title => 'Delete Attachment'  %>
              </div>
              
        <% end %>
      </div>
    
    <% else %>  
      <%#= f.fields_for :dealimages do |p| %>
         <%= f.label :deal_image, :class => 'control-label col-lg-2'  %>
         <div class="col-lg-4">
         <%= f.file_field :dealimage, :multiple => true, name: "dealimages[dealimage][]", :class => 'form-control' %>

         </div>
     <%# end %>
    <% end %>
  </div>
  
  

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                project_path(@project), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

  <%= render 'formjquery' %>