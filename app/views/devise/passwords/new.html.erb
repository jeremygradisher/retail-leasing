<div class="col-md-4 col-md-offset-4" style="margin-top:20px;text-align:center;">
  <%= image_tag("/images/status-plan-logo.png", :style => 'max-width:250px;margin-top:100px;', :class => '') %>
</div>


<div class="col-md-4 col-md-offset-4 new-user-login" style="margin-top:40px;">
  <%= bootstrap_devise_error_messages! %>
    <div id="triangle-up"></div>
<div class="panel panel-default devise-bs" style="background-color:#210f5b;border-color:#210f5b;">

  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
      <div class="form-group">
        <%#= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Email' %>
      </div>

      <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "btn btn-primary", style: "background-color:#3071a9;width:100%;" %>
    <% end %>
  </div>
</div>
<div class="accent-links" style="text-align:center;">
<%= render "devise/shared/links" %>
</div>
</div>
