<div class="row">
  <div class="col-xs-4 col-xs-offset-4" style="/*text-align:center;*/">
  <br><br>
  <div class="page-header">
  <h2><%= t "devise.invitations.edit.header" %></h2>
  </div>


<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :invitation_token, readonly: true %>

  <% if f.object.class.require_password_on_accepting %>
    <div class="control-group">
      <%= f.label :password, :class => "control-label" %>
      <%= f.password_field :password, :class => "form-control" %>
    </div>
    <br>

    <div class="field">
      <%= f.label :password_confirmation, :class => "control-label" %>
      <%= f.password_field :password_confirmation, :class => "form-control" %>
    </div>
    <br>
  <% end %>
  
    <div class="field">
      <%= f.label :first_name, :class => "control-label" %>
      <%= f.text_field :first_name, :class => "form-control" %>
    </div>
    <br>
    
    <div class="field">
      <%= f.label :last_name, :class => "control-label" %>
      <%= f.text_field :last_name, :class => "form-control" %>
    </div>
    <br>
    
    <div class="field">
    <%= f.label 'User Avatar', :class => 'control-label'  %>
    <%= f.file_field :avatar, :multiple => true, name: "user_avatars[avatar][]",
    :class => 'form-control', onchange: "validateFiles(this);",
    data: { max_file_size: 2.megabytes } %>
    </div>
    <br>

  <div class="actions">
    <%= f.submit t("devise.invitations.edit.submit_button") %>
  </div>
<% end %>


  </div><!-- End col-10 -->
</div><!-- End row -->