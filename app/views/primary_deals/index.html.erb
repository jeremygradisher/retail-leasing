<div class="row">
  <div class="col-xs-10 col-xs-offset-1">


<%- model_class = PrimaryDeal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:area_id) %></th>
      <th><%= model_class.human_attribute_name(:deal_id) %></th>
      <th><%= model_class.human_attribute_name(:project_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @primary_deals.each do |primary_deal| %>
      <tr>
        <td><%= link_to primary_deal.id, primary_deal_path(primary_deal) %></td>
        <td><%= primary_deal.area_id %></td>
        <td><%= primary_deal.deal_id %></td>
        <td><%= primary_deal.project_id %></td>
        <td><%=l primary_deal.created_at %></td>
        <td>
          <%= link_to image_tag('/images/view-button.png'),
                      primary_deal_path(primary_deal), 
                      :class => 'action-buttons print-none' %>
          <%#= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_primary_deal_path(primary_deal), :class => 'btn btn-primary btn-xs' %>
          <%= link_to image_tag('/images/delete-button.png'),
                      primary_deal_path(primary_deal),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'action-buttons print-none' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%#= link_to t('.new', :default => t("helpers.links.new")),
            new_primary_deal_path,
            :class => 'btn btn-primary' %>


  </div>
</div>