<%- model_class = PrimaryDeal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:area_id) %></th>
      <th><%= model_class.human_attribute_name(:deal_id) %></th>
      <th><%= model_class.human_attribute_name(:project_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @primary_deals.each do |primary_deal| %>
      <tr>
        <td><%= link_to primary_deal.id, primary_deal_path(primary_deal) %></td>
        <td><%= primary_deal.area_id %></td>
        <td><%= primary_deal.deal_id %></td>
        <td><%= primary_deal.project_id %></td>
        <td><%=l primary_deal.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      primary_deal_path(primary_deal), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_primary_deal_path(primary_deal), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      primary_deal_path(primary_deal),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_primary_deal_path,
            :class => 'btn btn-primary' %>
